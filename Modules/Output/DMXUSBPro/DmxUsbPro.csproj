<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Release</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">x86</Platform>
    <ProductVersion>8.0.50727</ProductVersion>
    <RootNamespace>VixenModules.Controller.DmxUsbPro</RootNamespace>
	   <TargetFramework>net6.0-windows</TargetFramework>
	   <UseWindowsForms>true</UseWindowsForms>
    <FileUpgradeFlags />
    <UpgradeBackupLocation />
    <AssemblyTitle>DmxUsbPro</AssemblyTitle>
    <Company>Vixen</Company>
    <Product>Vixen</Product>
    <Description>DmxUsbPro</Description>
    <Copyright>Copyright � Vixen 2011</Copyright>
    <Platforms>x64;x86</Platforms>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Release|x86'">
    <OutputPath>$(SolutionDir)\$(Configuration)\Modules\Controller\</OutputPath>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Release|x64'">
    <OutputPath>$(SolutionDir)\Release64\Modules\Controller\</OutputPath>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Debug|x86'">
    <OutputPath>..\..\..\$(Configuration)\Modules\Controller\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Debug|x64'">
    <OutputPath>..\..\..\Debug64\Modules\Controller\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
  </PropertyGroup>
	<ItemGroup>
    <ProjectReference Include="$(SolutionDir)\Vixen.System\Vixen.csproj">
      <Private>false</Private>
      <IncludeAssets>None</IncludeAssets>
    </ProjectReference>
  </ItemGroup>
	<ItemGroup>
    <ProjectReference Include="..\..\..\Common\Controls\Controls.csproj">
      <Private>false</Private>
      <IncludeAssets>None</IncludeAssets>
    </ProjectReference>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="NLog" Version="4.7.15"/>
    <PackageReference Include="System.IO.Ports" Version="6.0.0" />
  </ItemGroup>
	<Target Name="MoveLibs" AfterTargets="Build">
		<ItemGroup>
			<NugetFiles Include="@(ReferenceCopyLocalPaths-&gt;HasMetadata('PathInPackage'))">
				<OutPath>$(OutDir)..\..\Common\%(ReferenceCopyLocalPaths.NuGetPackageId)\%(ReferenceCopyLocalPaths.NuGetPackageVersion)\%(ReferenceCopyLocalPaths.PathInPackage)</OutPath>
				<DeletePath>$(OutDir)%(ReferenceCopyLocalPaths.DestinationSubPath)</DeletePath>
			</NugetFiles>
		</ItemGroup>
		<ItemGroup>
			<runtimes Include="$(OutputPath)runtimes\**\*.*" />
		</ItemGroup>
		<Copy SourceFiles="@(runtimes)" DestinationFolder="$(OutDir)..\..\Common\runtimes\%(RecursiveDir)" SkipUnchangedFiles="true" />
		<Copy SourceFiles="@(NugetFiles)" DestinationFiles="@(NugetFiles->'%(OutPath)')" />
		<Delete Files="@(NugetFiles->'%(DeletePath)')" />
	</Target>
</Project>